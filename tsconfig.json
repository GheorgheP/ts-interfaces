{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "types/*": ["src/*"],
            "examples/*": ["examples/*"]
        },
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": ["es2017"],
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
